{
  "schemaVersion": 1,
  "id": "${modid}",
  "version": "${version}",

  "accessWidener": "infinity.accesswidener",
  "environment": "client",
  "entrypoints": {
    "client": [
      "io.github.frontear.infinity.InfinityMod"
    ]
  },
  "mixins": [
    {
      "config": "mixins.infinity.json",
      "environment": "client"
    }
  ],

  "depends": {
    "fabricloader": ">=${loader}",
    "minecraft": "~${minecraft}",
    "java": ">=17"
  },
  "suggests": {
