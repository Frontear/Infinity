  "name": "${name}",
  "description": "A mod that implements utility and quality-of-life tools to make your experience easier",
  "contact": {
    "sources": "https://github.com/Frontear/Infinity"
  },
  "authors": [
    "${author}"
  ],
  "contributors": [],
  "license": "GPL-3.0-only",
  "icon": "assets/infinity/icon.png"
